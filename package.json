{
  "name": "clib_llantas",
  "version": "1.0.3",
  "description": "Campos libres de docs de ventas para Llantas",
  "main": "main.js",
  "author": "Rintel Gatachi <iustusrenidet@gmail.com>",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win",
    "web": "node server.js"
  },
  "dependencies": {
    "bootstrap": "^5.3.3",
    "node-firebird": "^0.8.9",
    "tom-select": "^2.3.1",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "electron": "^38.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "asar": true,
    "asarUnpack": [
      "**/*.node"
    ],
    "appId": "com.iconet.clib_llantas",
    "productName": "CLIB Ventas",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "win": {
      "icon": "icono/icono.ico",
      "signingHashAlgorithms": [],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}-${version}-x64.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}-${version}-setup.${ext}"
    }
  }
}